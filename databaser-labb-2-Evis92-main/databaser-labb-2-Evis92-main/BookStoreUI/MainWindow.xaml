<Window
    x:Class="BookStoreUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookStoreUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:BookStoreUI.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Name="StoreManagerTab" Header="Manage stores">
                <views:StoreManagerView x:Name="StoreManagerViewO" />
            </TabItem>
            <TabItem Name="BookManagerTab" Header="Manage books">
                <views:BookManagerView x:Name="BookManagerViewO" />
            </TabItem>
            <TabItem Name="AuthorManagerTab" Header="Manage Authors">
                <views:AuthorManagerView x:Name="AuthorManagerViewO" />
            </TabItem>
            <TabItem Name="PublisherManagerTab" Header="Manage Publishers">
                <views:PublisherManagerView x:Name="PublisherManagerViewO" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
